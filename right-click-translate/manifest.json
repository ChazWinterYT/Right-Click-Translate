{
  "manifest_version": 3,
  "name": "Right Click Translate",
  "version": "1.1",
  "description": "Highlight text, right-click, and translate using Google Translate.",
  "permissions": ["contextMenus", "activeTab", "storage"],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
